<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DareDevil" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font_style</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="Blue" parent="Theme.DareDevil">
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
    </style>

    <style name="FabTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_dialog_bg</item>
    </style>

    <style name="bottomSheetTitle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/size21sp</item>
        <item name="android:lineSpacingExtra">@dimen/size4dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingRight">@dimen/bottomSheetTitlePadding</item>
        <item name="android:paddingLeft">@dimen/bottomSheetTitlePadding</item>
        <item name="android:layout_marginBottom">@dimen/bottomSheetTitlePadding</item>
        <item name="android:background">@color/white</item>
    </style>


    <!--base button style starts here-->
    <style name="_button_style" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/minWidth</item>
        <item name="android:radius">@dimen/radius</item>
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:layout_marginRight">@dimen/layout_margin</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin</item>

    </style>
    <style name="PrimaryButton" parent="_button_style">
        <item name="android:textColor">@color/contentTextColorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>

    <!--primary button style ends here-->

    <!--secondary button style starts here-->
    <style name="SecondaryButton" parent="_button_style">
        <item name="android:textColor">@color/contentTextColorOnDisabled</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/seconary_btn_selector</item>
    </style>

</resources>